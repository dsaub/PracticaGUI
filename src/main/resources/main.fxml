<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="main.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.elordenador.practicagui.controllers.MainController">
    <children>
        <HBox fx:id="main_btn">
            <children>
                <Button onAction="#openDispositivos" styleClass="main_btn" text="Dispositivos Genericos">
                    <HBox.margin>
                        <Insets bottom="5" left="10" right="20" top="5" />
                    </HBox.margin>
                </Button>
                <Button onAction="#openOrdenadores" styleClass="main_btn" text="Ordenadores">
                    <HBox.margin>
                        <Insets bottom="5" left="10" right="20" top="5" />
                    </HBox.margin>
                </Button>
                <Button onAction="#openImpresoras" styleClass="main_btn" text="Impresoras">
                    <HBox.margin>
                        <Insets bottom="5" left="10" right="20" top="5" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
